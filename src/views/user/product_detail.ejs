<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SkinLeLe-Detail</title>
    <%- include('./block/style.ejs') %>
</head>

<body>
    <%- include('./block/header.ejs') %>
        <div class="breadcrumb-option">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="breadcrumb__links">
                            <a href=""><i class="fa fa-home"></i> Trang Chủ</a>
                            <a href="">Chi Tiết Sản Phẩm </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Breadcrumb End -->

        <!-- Product Details Section Begin -->
        <section class="product-details spad">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="product__details__pic">
                            <div class="product__details__slider__content">
                                <div class="product__details__pic__slider owl-carousel">
                                    <a class="pt active" href="">
                                        <img data-hash="product-1" class="product__big__img" src="<%= product.image %>"
                                            alt="">
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="product__details__text">
                            <h5>
                                <%= product.productName %>
                            </h5>
                            <div class="product__details__price">
                                <% if(product.sales && product.sales !== null){ %>
                                    <del style="color: gray; font-size: 14px; font-weight: normal;"><%= product.price.toLocaleString('vi-VN') %>đ</del>
                                    <%= Math.round(product.price - (product.price * product.sales.discount/ 100)).toLocaleString('vi-VN')+'đ' %>
                                <% }else{ %>
                                    <%= product.price.toLocaleString('vi-VN') %>đ
                                <% } %>
                            </div>
                            <p>
                                <%= product.description %>
                            </p>
                            <div class="product__details__button">
                                <a href="/addCart/<%= product.id %>" class="cart-btn"> Thêm
                                    giỏ
                                    hàng</a>
                            </div>
                            <div style="margin-left: 10px;" class="row">
                                <div class=".col-md-4">
                                    <p style="font-size: 18px;">(
                                        <%= countRate %> đánh giá)
                                    </p>
                                </div>
                                <div style="margin-left: 50px;" class=".col-md-8">
                                    <div class="rating">
                                        <i style="margin: 5px;font-size: 20px" class="fa fa-star"></i>
                                        <i style="margin: 5px;font-size: 20px" class="fa fa-star"></i>
                                        <i style="margin: 5px;font-size: 20px" class="fa fa-star"></i>
                                        <i style="margin: 5px;font-size: 20px" class="fa fa-star"></i>
                                        <i style="margin: 5px;font-size: 20px" class="fa fa-star"></i>
                                        <%= countStar.fine %>
                                    </div>
                                    <div class="rating">
                                        <i style="margin: 5px;font-size: 20px" class="fa fa-star"></i>
                                        <i style="margin: 5px;font-size: 20px" class="fa fa-star"></i>
                                        <i style="margin: 5px;font-size: 20px" class="fa fa-star"></i>
                                        <i style="margin: 5px;font-size: 20px" class="fa fa-star"></i>
                                        <%= countStar.four %>
                                    </div>
                                    <div class="rating">
                                        <i style="margin: 5px;font-size: 20px" class="fa fa-star"></i>
                                        <i style="margin: 5px;font-size: 20px" class="fa fa-star"></i>
                                        <i style="margin: 5px;font-size: 20px" class="fa fa-star"></i>
                                        <%= countStar.three %>
                                    </div>
                                    <div class="rating">
                                        <i style="margin: 5px;font-size: 20px" class="fa fa-star"></i>
                                        <i style="margin: 5px;font-size: 20px" class="fa fa-star"></i>
                                        <%= countStar.two %>
                                    </div>
                                    <div class="rating">
                                        <i style="margin: 5px;font-size: 20px" class="fa fa-star"></i>
                                        <%= countStar.one %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div style="margin-top: 100px;border-radius: 20px;" class="container">
                <div style="font-size: 18px;padding-top: 20px;" class="container">ĐÁNH GIÁ SẢN PHẨM</div>
                <%- include('./block/comment.ejs') %>

                        </div>
            </div>
        </section>
        <%- include('./block/footer.ejs') %>
</body>
<%- include('./block/script.ejs') %>

</html>